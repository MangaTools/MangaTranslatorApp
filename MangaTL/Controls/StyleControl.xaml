<UserControl x:Class="MangaTL.Controls.StyleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MangaTL.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding StyleName}" />
            <WrapPanel>
                <TextBlock Text="Font name" />
                <TextBlock Text="{Binding FontName}" />
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Font Size" />
                <TextBlock Text="{Binding FontSize}" />
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Alignment" />
                <TextBlock Text="{Binding Alignment}" />
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Alignment" />
                <TextBlock Text="{Binding Alignment}" />
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="Color" />
                <TextBlock Text="{Binding Alignment}" />
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>