<UserControl x:Class="MangaTL.Controls.BallonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MangaTL.Controls"
             xmlns:viewModels="clr-namespace:MangaTL.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid d:DataContext="{d:DesignInstance {x:Type viewModels:BubbleVM} }">
        <ItemsControl MouseEnter="{Binding MouseEnterBubble}" MouseLeave="{Binding MouseLeaveBubble}"
                      ItemsSource="{Binding Shapes}">
            <ItemsControl.ToolTip>
                <TextBlock Text="{Binding TranslatedText}" Background="Black" Foreground="White" />
            </ItemsControl.ToolTip>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <TextBlock Text="{Binding FormattedText}" />
    </Grid>
</UserControl>